define puck model(
  size [ 0.080 0.080 0.300 ]
  gripper_return 1
  gui_move 1
  gui_nose 0
  ranger_return 0
  laser_return 0
  fiducial_return 10
  mass 0.0
)

puck( pose [-4 1 0 0 ] color "green" )
puck( pose [-3 1 0 0 ] color "green" )
puck( pose [-2 1 0 0 ] color "green" )
puck( pose [-1 1 0 0 ] color "green" )
