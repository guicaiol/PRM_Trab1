  sicklaser()
 
  localization "gps"
  localization_origin [ 13 0 0 180 ]
  blobfinder ()

  gripper (
	pose [ 0.25 0.0 0.0 0.0 ]
	size [0.2 0.3 0.0]
	color "grey"
	)
)

